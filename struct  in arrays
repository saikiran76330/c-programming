#include<stdio.h>
struct student
{
    char name[50];
    int marks[5];
    float average;
};
void main()
{
    struct student s[3];
    for(int i=0;i<3;i++)
    {
        float sum=0.0;
        printf("enter the details of the student %d\n",i+1);
        printf("enter the name of the student \n");
        scanf("%s",s[i].name);
        printf("enter the marks of student\n");
        for(int j=0;j<5;j++)
        {
            scanf("%d",&s[i].marks[j]);
            sum+=s[i].marks[j];
        }
    s[i].average=sum/5.0;
    printf("\n");
    }
    int maxin=0;
    float maxave=s[0].average;
    for(int i=1;i<3;i++)
    {
    if(s[i].average>maxave)
    {
        maxin=i;
        maxave=s[i].average;
    }
    }
    printf("the topper name:%s",s[maxin].name);
    printf("the average marks of the topper is %f",maxave);
    
    
}
