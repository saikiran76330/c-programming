#include<stdio.h>
int n,m[15],i,sum=0;
int main()
{
    printf("how many students in the class:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("enter the marks of the students:");
        scanf("%d",&m[i]);
    }
    for(i=0;i<n;i++)
    {
     sum+=m[i];
    }
    printf("the sum of the marks of the students are %d",sum);
    printf("\nthe average of marks of the students are %d",sum/n);
}
