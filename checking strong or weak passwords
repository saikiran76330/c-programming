#include<stdio.h>
#include<string.h>
void main()
{
    char ar[50];
    printf("enter password:");
    scanf("%s",ar);
    int len=strlen(ar),u=0,l=0,s=0,d=0;
    if(len>8)
    {
        for(int i=0;i<len;i++)
        {
            if(isupper(ar[i]))
            {
                u++;
            }
            else if(islower(ar[i]))
            {
                l++;
            }
            else if(isdigit(ar[i]))
            {
                d++;
            }
            else
            {
                s++;
            }
        }
        if(u>0 && l>0 && d>0 && s>0)
        {
            printf("strong password");
        }
        else
        {
            printf("weak password");
        }
    }
    else
    {
        printf("weak due to less characters");
    }
}
