#include<stdio.h>
int n,m[15],i,sum=0,x,y,z=0;
float a;
int main()
{
    printf("how many students in the class:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        printf("enter the marks of the students:");
        scanf("%d",&m[i]);
    }
    for(i=0;i<n;i++)
    {
     sum+=m[i];
    }
    printf("the sum of the marks of the students are %d",sum);
    printf("\nthe average of marks of the students are %d",sum/n);
    
    printf("\nfor which student we need to correct:");
    scanf("%d",&x);
    printf("what is the actual score");
    scanf("%d",&m[x-1]);
    for(i=0;i<n;i++)
    {
        z+=m[i];
    }
    a=z/n;
     printf("the sum of the marks of the students are %d",z);
    printf("\nthe average of marks of the students are %f",a);
    
}
