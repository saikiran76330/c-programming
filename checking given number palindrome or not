#include<stdio.h>
int n,rev,i,temp=0,a;
int main()
{
    printf("enter a number");
    scanf("%d",&n);
    a=n;
    for(i=1;n>0;i++)
    {
        rev=n%10;
        n=n/10;
        temp=temp*10+rev;
    }
   if(a==temp)
   {
    printf("given number %d is palindrome",a);
   }
   else
   {
       printf("given number %d is not palindrome",a);
   }
    
}
